---
import Tag from '../components/Tag.astro'
const { title, img, desc, url, tags } = Astro.props;
---
<a
  class="flex flex-col max-w-sm sm:w-70 rounded-lg bg-base-300 items-center
  text-center"
  href={url}
>
  <img class='rounded-lg' src={img} alt=''/>
  <div class='py-3 px-2'>
    <h3 class="relative text-lg font-bold leading-none">
      {title}
    </h3>
    <p class='my-2 text-sm leading-tight'>
      {desc}
    </p>
    <div class="flex flex-wrap gap-1.5 justify-center">
      {tags.map(tag => <Tag name={tag} />)}
    </div>
  </div>
</a>
